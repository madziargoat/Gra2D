<Window x:Class="Gra2D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gra 2D" Height="600" Width="800" KeyDown="OknoGlowne_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Panel statystyk -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Label x:Name="EtykietaHP" Content="HP: 100/100" Margin="5"/>
            <Label x:Name="EtykietaStamina" Content="Stamina: 50/50" Margin="5"/>
            <Label x:Name="EtykietaDrewna" Content="Drewno: 0/10" Margin="5"/>
            <Label x:Name="EtykietaKamien" Content="Kamień: 0/5" Margin="5"/>
            <Label x:Name="EtykietaZloto" Content="Złoto: 0/3" Margin="5"/>
            <Label x:Name="EtykietaPoziom" Content="Poziom: 1" Margin="5"/>
        </StackPanel>

        <!-- Mapa -->
        <Grid x:Name="SiatkaMapy" Grid.Row="1" Background="Black"/>
    </Grid>
</Window>